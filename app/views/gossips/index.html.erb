<%= render "/layouts/header" %>

<div class="center jumbotron">
  <h1> Gossips !</h1>

  <table class="table mt-5">
    <thead>
      <tr>
        <th>Id</th>
        <th>Author</th>
        <th>Content</th>
        <th>Link</th>
      </tr>
    </thead>
  <tbody>
  <% Gossip.all.each do |gossip| %>
      <tr>
        <th><%= gossip.id %></th>
        <td><%= gossip.anonymous_gossiper %></td>
        <td><%= gossip.content %></td>
        <td><%= link_to 'Voir', gossip_path(gossip.id) %></td>
      </tr>
  <% end %>

  <a href="<%= new_gossip_path  %>" class= "btn btn-lg btn-primary" > Create new Gossip </a>
</div>